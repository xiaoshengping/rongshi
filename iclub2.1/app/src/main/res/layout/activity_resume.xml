<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/iculd_beijin_icon"
    tools:context="com.example.administrator.iclub21.util.ResumeActivity">

    <TextView
        android:id="@+id/add_resume_tv"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="150dp"
        android:textSize="@dimen/textSize18"
        android:text="添加新简历"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ScrollView
        android:scrollbars="none"
        android:visibility="gone"
        android:id="@+id/compile_zliao_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/compile_tv"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <ImageView
          android:layout_marginLeft="60dp"
          android:src="@mipmap/mine_head_default"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
        <TextView
            android:text="上传头像"
            android:layout_marginLeft="80dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >
          <TextView
              android:text="姓名"
              android:layout_marginLeft="20dp"
              android:textColor="@color/white"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <EditText
              android:hint="必填"
              android:textColorHint="@color/white"
              android:layout_marginLeft="50dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />

      </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >
          <TextView
              android:text="年龄"
              android:layout_marginLeft="20dp"
              android:textColor="@color/white"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <EditText
              android:hint="必填"
              android:textColorHint="@color/white"
              android:layout_marginLeft="50dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
      </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >
          <TextView
              android:text="性别"
              android:layout_marginLeft="20dp"
              android:textColor="@color/white"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <EditText
              android:hint="必填"
              android:textColorHint="@color/white"
              android:layout_marginLeft="50dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />

      </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >
          <TextView
              android:text="职业类别"
              android:layout_marginLeft="20dp"
              android:textColor="@color/white"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <EditText
              android:hint="必填"
              android:textColorHint="@color/white"
              android:layout_marginLeft="20dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />

      </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >
          <TextView
              android:text="职业名称"
              android:layout_marginLeft="20dp"
              android:textColor="@color/white"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <EditText
              android:hint="必填"
              android:textColorHint="@color/white"
              android:layout_marginLeft="20dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />

      </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >
          <TextView
              android:text="工作地点"
              android:layout_marginLeft="20dp"
              android:textColor="@color/white"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <EditText
              android:hint="必填"
              android:textColorHint="@color/white"
              android:layout_marginLeft="20dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />

      </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >
          <TextView
              android:text="QQ"
              android:layout_marginLeft="20dp"
              android:textColor="@color/white"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <EditText
              android:hint="必填"
              android:textColorHint="@color/white"
              android:layout_marginLeft="55dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />

      </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >
          <TextView
              android:text="Email"
              android:layout_marginLeft="20dp"
              android:textColor="@color/white"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <EditText
              android:hint="必填"
              android:textColorHint="@color/white"
              android:layout_marginLeft="40dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />

      </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >
          <TextView
              android:text="手机号码"
              android:layout_marginLeft="20dp"
              android:textColor="@color/white"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <EditText
              android:hint="必填"
              android:textColorHint="@color/white"
              android:layout_marginLeft="20dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />

      </LinearLayout>
  </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:text="自我介绍"
            android:textSize="@dimen/textSize18"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:hint="亲，请填写自我介绍哦(必填)"
            android:textColorHint="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:text="工作经历"
            android:textSize="@dimen/textSize18"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:hint="亲，请填写工作经历哦(必填)"
            android:textColorHint="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="图片介绍"
            android:textSize="@dimen/textSize18"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:text="视频展示"
            android:textSize="@dimen/textSize18"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="音乐制作"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/textSize18"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>

    </ScrollView>

</LinearLayout>
