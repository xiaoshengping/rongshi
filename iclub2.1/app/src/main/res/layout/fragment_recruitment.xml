<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/iculd_beijin_icon"
    tools:context="com.example.administrator.iclub.fragment.RecruitmentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="娱乐招聘"
            android:textColor="#DEDDE2"
            android:textSize="24sp"
            android:padding="10dp"
            />

        <include
            layout="@layout/recruiment_list_title"
            android:visibility="gone"/>

        <ListView
            android:id="@+id/recruitment_listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:dividerHeight="0dp"
            >

        </ListView>

    </LinearLayout>

